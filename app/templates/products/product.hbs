
<div class="container">
	<div class="row">
		<div class="col-md-4">
		<img {{bind-attr src=src}} alt="product" height="300">
		</div>
		<div class="col-md-4">
		<p>name: {{title}}</p>
		<p>price: {{price}}</p>
		<p>descriptions: {{description}}</p>
		 {{#if controllers.application.currentUser.isAdmin}}
	    <p>{{#link-to 'editproduct' model }}EDIT{{/link-to}}</p>
	    {{/if}}
	    {{#if controllers.application.currentUser.isAdmin}}
	    <p><button class="btn btn-default" {{action 'deleteProduct' model}}>Delete</button></p>
	    {{/if}}
		{{#unless controllers.application.currentUser.isAdmin}}
		<button class="btn btn-primary" {{action 'buy' model }}> BUY NOW</button>
		{{/unless}}
		</div>
	</div>
</div>


