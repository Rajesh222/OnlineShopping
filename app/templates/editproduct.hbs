<div class="container">
	<h2>Edit Page</h2>
<div class="row">
	<div class="col-md-6">
		<form {{action 'saveProduct' on="submit"}}>
			<div class="form-group">
				Title:{{input value=title  class="form-control"}}	
			</div>
			<div class="form-group">
				Description:{{input value=description class="form-control"}}	
			</div>
			<div class="form-group">
				Price: {{input value=price class="form-control"}}
			</div>	
			<div class="form-group">
				Path: {{input value=src  class="form-control"}}	
			</div>
				<button type="submit" class="btn btn-primary">save</button>
		</form>
	</div>
</div>

</div>